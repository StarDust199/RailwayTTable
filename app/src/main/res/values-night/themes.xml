<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Base.Theme.RailwayTTable" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>
    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:windowBackground">@color/gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="preferenceTheme">@style/ListPreference</item>


    </style>

    <style name="BlueTheme" parent="Base.AppTheme">
        <item name="colorPrimary">@color/blueb</item>
        <item name="colorPrimaryVariant">@color/light_blue1</item>
        <item name="colorAccent">@color/almost_white</item>
        <item name="colorContainer">@color/light_orange</item>
        <item name="colorButtonNormal">@color/almost_white</item>
        <item name="colorOnBackground">@color/blueb</item>
        <item name="preferenceTheme">@style/ListPreference</item>

    </style>
    <style name="VioletTheme" parent="Base.AppTheme">
        <item name="colorPrimary">@color/fuchsia</item>
        <item name="colorPrimaryVariant">@color/light</item>
        <item name="colorAccent">@color/rose</item>
        <item name="colorContainer">@color/sea</item>
        <item name="colorButtonNormal">@color/light</item>
        <item name="colorOnBackground">@color/fuchsia</item>
        <item name="preferenceTheme">@style/ListPreference</item>

    </style>
    <style name="GreenTheme" parent="Base.AppTheme">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/light_green</item>
        <item name="colorAccent">@color/sunny</item>
        <item name="colorContainer">@color/sunny_orange</item>
        <item name="colorButtonNormal">@color/very_light_green</item>
        <item name="colorOnBackground">@color/sunny</item>
        <item name="preferenceTheme">@style/ListPreference</item>

    </style>


    <style name="ScreenBackground">
        <item name="android:background">@color/gray</item>
    </style>

    <style name="ListPreference" parent="PreferenceThemeOverlay">
        <item name="android:textColor">@color/white</item> <!-- Tu ustaw kolor tekstu -->
    </style>

    <style name="MyToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>